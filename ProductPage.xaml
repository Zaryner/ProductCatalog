<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Platinum_Star.ProductPage"
             Title="Product">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                
                <Button Text="Back" BackgroundColor="Black" TextColor="White" HorizontalOptions="Start" Clicked="Back"/>
                <!-- Изображение товара -->
                <Image Aspect="AspectFit" HeightRequest="300" x:Name="ProductImage"/>

                <!-- Название товара -->
                <Label FontAttributes="Bold" FontSize="Title" Margin="0,10,0,0" x:Name="ProductName"/>

                <!-- Цена товара -->
                <Label FontSize="Subtitle" TextColor="Green" Margin="0,5,0,0" x:Name="ProductPrice"/>

                <!-- Описание товара -->
                <Label x:Name="ProductDescription" Margin="0,10,0,0" />

                <!-- Кнопка "Добавить в корзину" -->
                <Button Text="Add to Cart" BackgroundColor="Green" TextColor="White" Margin="0,20,0,0" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>